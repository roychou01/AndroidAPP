<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-+= 這是第二個畫面 =+-"
        android:id="@+id/textview_two"
        android:textSize="24sp"
        android:textColor="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        />

    <Button
        android:id="@+id/button_close_activity_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="關閉第二個畫面"
        android:textColor="#E91E63"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_two" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_activity_three"
        android:text="啟動第三個畫面"
        android:textColor="#009688"
        app:layout_constraintLeft_toLeftOf="@id/button_close_activity_two"
        app:layout_constraintTop_toBottomOf="@id/button_close_activity_two"
        />

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/group_01"
        android:visibility="visible"
        />


</androidx.constraintlayout.widget.ConstraintLayout>