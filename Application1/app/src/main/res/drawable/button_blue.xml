<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#907FFB"/>
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item>
        <shape>
            <corners android:bottomLeftRadius="5dp"
                android:topLeftRadius="10dp"
                android:topRightRadius="15dp"
                android:bottomRightRadius="20dp"
            />

            <!--純色寫法：<solid android:color="#04E1FA" /> -->
            <gradient android:startColor="#03FBA4"
                android:centerColor="#04ECF8"
                android:endColor="#F80429"
                android:angle="45"
                />
                <!--angle 非45會轉不出來,沒效果,45的倍數才會變化-->
            <stroke android:color="#040CFB"
                android:width="4dp"
                android:dashGap="4dp"
                android:dashWidth="10dp"
                />

            <padding android:left="15dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="5dp"
                />
        </shape>

    </item>

</selector>