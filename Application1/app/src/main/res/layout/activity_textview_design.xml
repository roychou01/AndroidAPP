<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="#81EB85"
        android:text="顯示文字練習" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView練習2"
        android:textColor="#E91E63"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#C8FD03"
        android:text="第三組文字練習"
        android:textAlignment="center"
        android:textColor="#0458FA"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#61D9F8"
        android:gravity="bottom|right"
        android:text="第四組TextView文字練習" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#D7A2F8"
        android:text="外部位置設定1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="#FB60D7"
            android:text="一" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="#E151EF"
            android:text="二" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>