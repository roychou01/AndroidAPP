<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="攝氏溫度："
        android:id="@+id/textview_temp_c"
        android:textSize="20sp"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="請輸入攝氏溫度值"
        android:id="@+id/edittext_input_c"
        android:inputType="numberDecimal"
        android:ems="9"
        app:layout_constraintLeft_toRightOf="@id/textview_temp_c"
        app:layout_constraintBaseline_toBaselineOf="@id/textview_temp_c"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_ctof"
        android:text="轉換"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/textview_temp_c"
        app:layout_constraintLeft_toLeftOf="@id/textview_temp_c"
        />


</androidx.constraintlayout.widget.ConstraintLayout>